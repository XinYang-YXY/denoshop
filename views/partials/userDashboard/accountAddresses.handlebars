<div class="border-bottom userDashboardHeader">
	<i class="fa fa-location-arrow" aria-hidden="true"></i> My Address
</div>

<!-- Add Addr Button -->
<button type="button" class="btn btn-primary mt-3 ml-3 mb-3" data-toggle="modal" data-target="#exampleModalAddAddr"
	data-whatever="@mdo">Add New Address</button>


<!-- List Addr -->
{{#each deliveryAddrs}}
<div class="cartItems ">
	<div class="cartItem container pt-3">
		<div class="row">
			<div class="col-2 " align="center">

				<i class="far fa-address-card deliveryInfoLogo mt-1"></i>
			</div>
			<div class="col-10">
				<div class="row">
					<p id="deliveryInfoName">
						{{this.receiverName}}

						<span id="deliveryInfoCell" class="ml-3 pt-0">{{this.phoneNo}}</span>
					</p>

				</div>
				<div class="row">
					<p id="deliveryInfoAddr">{{this.street}} Block {{this.blockNo}} {{this.unitNo}}, {{this.country}}
						{{this.state}}, {{this.country}} {{this.postcode}}</p>
				</div>
				<div class="row">
					<i class="far fa-edit mr-3 " type="button" data-toggle="modal" data-target="#exampleModalEditAddr"
						data-whatever="{{this.receiverName}},{{this.phoneNo}},{{this.country}},{{this.state}},{{this.city}},{{this.blockNo}},{{this.street}},{{this.unitNo}},{{this.postcode}},{{this.id}}"></i>
					<i type="button" class="far fa-trash-alt" data-toggle="modal" data-target="#exampleModalDelete"
						data-whatever="{{this.id}}"></i>

				</div>
			</div>
		</div>
	</div>

</div>
{{/each}}

<!-- List Addr -->

<!-- Edit delivery Addr Modal-->
<div class="modal fade" id="exampleModalEditAddr" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
	aria-hidden="true">
	<div class="modal-dialog modal-lg" role="document">

		<div class="modal-content ">


			<div class="modal-header">
				<h5 class="modal-title" id="exampleModalLabel">Edit address</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<input type="hidden" name="_method" value="PUT" />
				{{!-- Form Start --}}
				<form id="editAddress" method="post">
					<fieldset class="form-group">
						{{!-- <legend class="border-bottom mb-4">
					Add a new address
				</legend> --}}
						<div class="form-group" id="locationField">
							<label for="inputAddress">Address</label>
							<input type="text" class="form-control" id="editAutocomplete"
								placeholder="Enter your address" onfocus="geolocate()" />
						</div>

						<div class="form-row">
							<div class="col-md-3 mb-3">
								<label for="receiverName">Receiver Name<span class="text-danger ml-1">*</span></label>
								<input type="text" class="form-control" id="receiverName" placeholder="" name="receiverName" required />

							</div>
							<div class="col-md-3 mb-3">
								<label for="phoneNum">Phone Number<span class="text-danger ml-1">*</span></label>
								<input type="text" class="form-control" id="phoneNum" placeholder="" name="phoneNo" required />
							</div>
						</div>

						<div class="form-row">
							<div class="col-md-3 mb-3">
								<label for="country">Country</label>
								<input type="text" class="form-control" id="countryE" placeholder="" name="country"/>

							</div>
							<div class="col-md-3 mb-3">
								<label for="administrative_area_level_1">State</label>
								<input type="text" class="form-control" id="administrative_area_level_1E"
									placeholder="" name="state"/>
							</div>
							<div class="col-md-3 mb-3">
								<label for="locality">City</label>
								<input type="text" class="form-control" id="localityE" placeholder="" name="city"/>
							</div>
						</div>



						<div class="form-row">
							<div class="col-md-3 mb-3">
								<label for="street_number">Block No</label>
								<input type="text" class="form-control" id="street_numberE" placeholder="" name="blockNo"/>
							</div>
							<div class="col-md-3 mb-3">
								<label for="route">Street</label>
								<input type="text" class="form-control" id="routeE" placeholder="" name="street"/>
							</div>
							<div class="col-md-3 mb-3">
								<label for="unitNo">Unit Number<span class="text-danger ml-1">*</span></label>
								<input type="text" class="form-control" id="unitNoE" placeholder="" name="unitNo"/>
							</div>
						</div>



						<div class="form-row">
							<div class="col-md-3 mb-3">
								<label for="postal_code">Postal Code</label>
								<input type="text" class="form-control" id="postal_codeE" placeholder="" name="postcode"/>
							</div>
							<div class="col-md-3 mb-3">
								<label for="">Default Address</label>
								{{!-- <div>
									<input class="form-control" type="checkbox" checked data-toggle="toggle"
										data-onstyle="info">
								</div> --}}

							</div>


						</div>
						<button type="submit" id="editAddrButton" class="btn btn-primary">Edit</button>
						<button type="button" class="btn btn-secondary" data-dismiss="modal">Discard</button>


						{{!-- <button type="submit" class="btn btn-primary">Save</button> --}}
						<fieldset class="form-group"></fieldset>
				</form>
				{{!-- Form End --}}
			</div>
		</div>
	</div>
</div>
<!-- Edit delivery Addr Modal-->


<!-- Add delivery Addr Modal-->
<div class="modal fade" id="exampleModalAddAddr" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
	aria-hidden="true">
	<div class="modal-dialog modal-lg" role="document">
		<div class="modal-content ">
			<div class="modal-header">
				<h5 class="modal-title" id="exampleModalLabel">Add a new address</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				{{!-- Form Start --}}
				<form id="address" action="/deliveryInfo/addAddress" method="POST">
