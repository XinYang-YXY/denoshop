<div class="content-section">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
	<script src="/script/popup.js"></script>
	<form action="/user/login" method="POST">
    
		<fieldset class="form-group">
			<legend class="border-bottom mb-4 shopFontTitle">
				Contact
			</legend>

                        <p><i>Please fill up the form below and our friendly online team will assist you as soon as possible.</i></p>
                        <br>
			<div class="form-group">
				<label class="form-control-label" for="name">
					Name*
				</label>
				<input class="form-control" id="name" name="name" required type="text" value=""/>
			</div>
			<div class="form-group">
				<label class="form-control-label" for="email">
					Email*
				</label>
				<input class="form-control" id="email" name="email" required type="email" value=""/>
			</div>
                        <div class="form-group">
				<label class="form-control-label" for="phone">
					Phone Number
				</label>
				<input class="form-control" id="phone" name="phone" type="text" value=""/>
			</div>
                        <div class="form-group">
                                <label class="form-check-label" for="department">Department*</label>
                                <select class="form-control" id="department" required>
                                <option value="" selected disabled hidden>Select one</option>
                                <option>Order Status</option>
                                <option>Product Advice and Enquiries</option>
                                <option>Warranty</option>
                                <option>Gift Ideas</option>
                                <option>Store Enquiries</option>
                                <option>Others</option>
                                </select>
                        </div>
                        <div class="form-group">
				<label class="form-control-label" for="desc">
					Describe the problem*
				</label>
				<textarea class="form-control" rows="5" id="desc" name="desc" required></textarea>
			</div>
			<div class="form-check">
				<input class="form-check-input" id="remember" name="remember" type="checkbox" value="y"/>
				<label class="form-check-label text-danger" for="remember">
					This issue is urgent and requires immediate attention !
				</label>
			</div>
		</fieldset>
		<div class="form-group">
			<input class="btn btn-outline-info" id="submit" name="submit" type="submit" value="Submit"/>
		</div>
	</form>

</div>

<div class="chatbox chatbox--tray">
    <div class="chatbox__title">
        <h5><a href="#">ChatBot</a></h5>
        <button class="chatbox__title__tray">
            <span></span>
        </button>
        <button class="chatbox__title__close">
            <span>
                <svg viewBox="0 0 12 12" width="12px" height="12px">
                    <line stroke="#FFFFFF" x1="11.75" y1="0.25" x2="0.25" y2="11.75"></line>
                    <line stroke="#FFFFFF" x1="11.75" y1="11.75" x2="0.25" y2="0.25"></line>
                </svg>
            </span>
        </button>
    </div>
    <div class="chatbox__body">
		<!-- Sender Message-->
		<div class="media-body w-75 mb-3">
			<div class="bg-light rounded py-2 px-3 mb-2">
				<p class="text-small mb-0 text-dark"> Hi ! I'm a chat bot , ask me anything ! </p>
			</div>
			<p class="small text-muted">12:00 PM | Jun 03</p>
		</div>
          
        <!-- Reciever Message-->
        <div class="media w-75 ml-auto mb-3">
          <div class="media-body">
            <div class="bg-primary rounded py-2 px-3 mb-2">
              <p class="text-small mb-0 text-white"> Are the deno hoodies still in stock ?</p>
            </div>
            <p class="small text-muted">12:01 PM | Jun 03</p>
          </div>
        </div>

		<!-- Sender Message-->
		<div class="media-body w-75 mb-3">
			<div class="bg-light rounded py-2 px-3 mb-2">
				<p class="text-small mb-0 text-dark"> The deno hoodies are still in stock ! <br> Available in : XS / S / M / L / XL </p>
			</div>
			<p class="small text-muted">12:01 PM | Jun 03</p>
		</div>
        
    </div>
    <textarea class="chatbox__message" placeholder="Write something interesting"></textarea>
</div>
