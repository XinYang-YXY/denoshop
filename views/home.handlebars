<link rel="stylesheet" href="/css/userInterface/homeProduct.css">
<div class="banner">
	<img src="img/hacking2.jpg" alt="" />
	<div class="background"></div>
	<h2>
		Deno Shop
	</h2>
</div>


<script src="js/useInterface/banner.js"></script>
<script src="js/useInterface/home.js"></script>
<!--Tabs-->
<section class="sellingItems">
	<div class="tabs">
		<button type="button" class="tabButton" value="sellingOutfits">
			Hacker's Outfits
		</button>
		<button type="button" class="tabButton" value="sellingTools">
			Hacker's Tools
		</button>
		<button type="button" class="tabButton" value="recommendedProducts" style="margin-left:20px;">
			Recommended
		</button>
	</div>
</section>
<!--Tabs-->
<!-- itemsAvailable -->
<section class="itemsAvailable" id="afterModal">
	<div class="sellingOutfits subPage">
		<h3>
			Hacker's Outfits
		</h3>
		<div class="productContainer ">

			{{#each hackingProducts}}
			{{#if (equal this.category "outfits")}}
			<div class="card m-3" style="width: 18rem;">

				<div class="productPic content">

					<div class="content-overlay"></div>
					<img class="card-img-top content-image" src="{{imageUrl this.imageFile 0}}" alt="{{this.title}}" />

					<div class="content-details fadeIn-bottom">
						<a href="/product/{{this.id}}" class="btn btn-light content-title">View More</a>
					</div>
				</div>
				<div class="card-body">
					<div style="display:flex; justify-content:space-between">
						<h5 class="card-title" >
							{{this.title}}
						</h5>
						{{#if (noEqual userLogin)}}
						<div class="wishlist_btn"></div>
						<span class="itemID" hidden>{{this.id}}</span>
						{{else}}
						<a href="/login"><div class="wishlist_btn"></div></a>
						{{/if}}
					</div>

					<p class="card-text">
						{{this.description}}
					</p>
					<div class="addToCart">
						<span id="priceTag" class="pt-2">S$
							{{this.price}}</span>
						{{#if (noEqual userLogin)}}
						<button type="button" class="btn btn-outline-primary addToCartN">Add to Cart</button>
						{{else}}
						<button type="button" class="btn btn-outline-primary" onclick="askLogin()">Add to
							Cart</button>
						{{/if}}
					</div>
				</div>
			</div>
			{{/if}}
			{{/each}}
		</div>
	</div>
	</div>
	<!-- End of sellingOutfits page -->
	<div class="sellingTools subPage">
		<h3>
			Hacker's Tool
		</h3>
		<div class="productContainer ">

			{{#each hackingProducts}}
			{{#if (equal this.category "tools")}}
			<div class="card m-3" style="width: 18rem;">

				<div class="productPic content">
					<div class="content-overlay"></div>
					<img class="card-img-top content-image" src="{{imageUrl this.imageFile 0}}" alt="{{this.title}}" />

					<div class="content-details fadeIn-bottom">
						<a href="/product/{{this.id}}" class="btn btn-light content-title">View More</a>
					</div>
				</div>
				<div class="card-body">
						<div style="display:flex; justify-content:space-between">
							<h5 class="card-title" >
								{{this.title}}
							</h5>
							{{#if (noEqual userLogin)}}
							<div class="wishlist_btn"></div>
							<span class="itemID" hidden>{{this.id}}</span>
							{{else}}
							<a href="/login"><div class="wishlist_btn"></div></a>
							{{/if}}
						</div>


					<p class="card-text">
						{{this.description}}
					</p>
					<div class="addToCart">
						<span id="priceTag" class="pt-2">S$
							{{this.price}}</span>
						{{#if (noEqual userLogin)}}
						<h1>{{userLogin}}</h1>
						<button type="button" class="btn btn-outline-primary addToCartN">Add to Cart</button>
						{{else}}
						<button type="button" class="btn btn-outline-primary" onclick="askLogin()">Add to Cart</button>
						{{/if}}
					</div>
				</div>
			</div>
			{{/if}}

			{{/each}}


		</div>
	</div>
	<!-- End of shopItems page -->
	</div>
	<!-- Endo of sellingTools page -->
	<div class="recommendedProducts subPage">
		<h3>
			Recommended Products for you
		</h3>
		<div class="productContainer ">

			{{#each recomm_products}}
			<div class="card m-3" style="width: 18rem;">

				<div class="productPic content">

					<div class="content-overlay"></div>
					<img class="card-img-top content-image" src="{{imageUrl this.imageFile 0}}" alt="{{this.title}}" />

					<div class="content-details fadeIn-bottom">
						<a href="/product/{{this.id}}" class="btn btn-light content-title">View More</a>
					</div>
				</div>
				<div class="card-body">
					<div style="display:flex; justify-content:space-between">
						<h5 class="card-title" >
							{{this.title}}
						</h5>
						{{#if (noEqual userLogin)}}
						<div class="wishlist_btn"></div>
						<span class="itemID" hidden>{{this.id}}</span>
						{{else}}
						<a onclick="askLogin()"></a><div class="wishlist_btn"></div></a>
						{{/if}}
					</div>

					<p class="card-text">
						{{this.description}}
					</p>
					<div class="addToCart">
						<span id="priceTag" class="pt-2">S$
							{{this.price}}</span>
						{{#if (noEqual userLogin)}}
						<button type="button" class="btn btn-outline-primary addToCartN">Add to Cart</button>
						{{else}}
						<button type="button" class="btn btn-outline-primary" onclick="askLogin()">Add to
							Cart</button>
						{{/if}}
					</div>
				</div>
			</div>
			{{/each}}
		</div>
	</div>
	</div>
	<!-- End of recommended product page -->
</section>
<!-- Modal -->
<section class="addToCartModal">
	<div class="modalContent">
		<div class="modalHeader">
			<p class="closeBtn">
				×
			</p>
		</div>
		<div class="modalBody">
			<p class="modalBodyHeader">
				Item Added!
			</p>
			<p class="modalBodyMessage">
				Please Go To Your Cart To Checkout
			</p>
		</div>
	</div>
</section>
<!-- Modal -->

<!-- Banner Modal -->
<section class="banner_modal" id="banner_modal">
	<div class="banner_modalContent">
		<div class="modalHeader">
			<p class="closeBtn">
				×
			</p>
		</div>
		<div class="modalBody">
			<p class="modalBodyHeader">
				<div id="carouselControls" class="carousel slide" data-ride="carousel" style="">
                    {{#if first}}
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block banner_img" src="{{first.imageFile}}" alt="">
                        </div>
                        {{#each banner}}
                        <div class="carousel-item">
                            <img class="d-block banner_img" src="{{imageFile}}" alt="">
                        </div>
                        {{/each}}
                    </div>
                    <a class="carousel-control-prev" href="#carouselControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
                {{else}}
                <p style="text-align: center;">No banners found</p>
                {{/if}}
			</p>
			<p class="modalBodyMessage">
				<a onclick="begone()" href="" id="option">Never show this again</a>
			</p>
		</div>
	</div>
</section>
<!-- Banner Modal -->


<script src="/js/user/addToCart.js"></script>
<script src="/js/user/wishlist.js"></script>