{% block content %} }}
{{!-- <script src="{{ url_for('static', filename='js/home.js') }}"></script> {{! Testing}} --}}
<script src="js/useInterface/home.js"></script>
<!--Tabs-->
<section class="sellingItems">
	<div class="tabs">
		<button type="button" class="tabButton" value="sellingOutfits">
			Hacker's Outfits
		</button>
		<button type="button" class="tabButton" value="sellingTools">
			Hacker's Tools
		</button>
	</div>
</section>
<!--Tabs-->
<!-- itemsAvailable -->
<section class="itemsAvailable" id="afterModal">
	<div class="sellingOutfits subPage">
		<h3>
			Hacker's Outfits
		</h3>
		<div class="shopItems">
			{{#each hackingProducts}}
				{{#if (equal this.category "outfits")}}
					<div class="shopItem item1">
						<span class="itemName">
							{{this.title}}
						</span>
						<img src="{{this.imageFile}}" alt="{{this.title}}" />
						<div class="shopItemDetails">
							<span class="itemPrice">
								S$
								{{this.price}}
							</span>
							{{!-- {{#if (user)}} --}}
							<button type="button" class="addToCartN">Add To Cart</button>
							{{!-- {{else}}
							<button type="button" class="addToCart">Add To Cart</button>
							{{/if}} --}}
						</div>
					</div>
				{{/if}}
			{{/each}}
		</div>
	</div>
	<!-- End of sellingOutfits page -->
	<div class="sellingTools subPage">
		<h3>
			Hacker's Tool
		</h3>
		<div class="shopItems">
			{{#each hackingProducts}}
				{{#if (equal this.category "tools")}}
					<div class="shopItem item1">
						<span class="itemName">
							{{this.title}}
						</span>
						<img src="{{this.imageFile}}" alt="{{this.title}}" />
						<div class="shopItemDetails">
							<span class="itemPrice">
								S$
								{{this.price}}
							</span>
							{{!-- {{#if (user)}} --}}
							<button type="button" class="addToCartN">Add To Cart</button>
							{{!-- {{else}}
							<button type="button" class="addToCart">Add To Cart</button>
							{{/if}} --}}
						</div>
					</div>
				{{/if}}
			{{/each}}
		</div>
		<!-- End of shopItems page -->
	</div>
	<!-- Endo of sellingTools page -->
</section>
<!-- Modal -->
<section class="addToCartModal">
	<div class="modalContent">
		<div class="modalHeader">
			<p class="closeBtn">
				Ã—
			</p>
		</div>
		<div class="modalBody">
			<p class="modalBodyHeader">
				Item Added!
			</p>
			<p class="modalBodyMessage">
				Please Go To Your Cart To Checkout
			</p>
		</div>
	</div>
</section>
