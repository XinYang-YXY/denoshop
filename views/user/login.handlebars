<link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet" type="text/css" />

<div class="content-section">

	{{>  flashMsg/simpleFlashMsg}}
	{{> flashMsg/flashmsg}}
	<form action="/user/login" method="POST">

		<fieldset class="form-group">
			<legend class="border-bottom mb-4 shopFontTitle">
				Log In
			</legend>
			<div class="form-group">
				<label class="form-control-label" for="email">
					Email
				</label>
				<input class="form-control form-control-lg" id="email" name="email" required type="text" value="" />
			</div>
			<div class="form-group">
				<label class="form-control-label" for="password">
					Password
				</label>
				<input class="form-control form-control-lg" id="password" name="password" required type="password"
					value="" pattern=".{8,}" title="8 characters minimum" />
				<small class="text-muted">
					<a class="text-primary" href="#reset_request">
						Forgot Password?
					</a>
				</small>
			</div>
			{{!-- <div class="form-check">
				<input class="form-check-input" id="remember" name="remember" type="checkbox" value="y" />
				<label class="form-check-label" for="remember">
					Remember Me
				</label>
			</div> --}}

		</fieldset>

		<div class="form-group">
			<input class="btn btn-primary" id="submit" name="submit" type="submit" value="Login" />
		</div>




		<div class="divider mt-4">
		</div>
